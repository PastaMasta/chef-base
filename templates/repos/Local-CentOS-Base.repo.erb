[local-base]
name=Local CentOS-$releasever - Base
baseurl=http://<%="#{node['base']['master']}"%>/cobbler/repo_mirror/CentOS$releasever-$basearch-os/
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-CentOS-$releasever
enabled=1

#released updates 
[local-updates]
name=Local CentOS-$releasever - Updates
baseurl=http://<%="#{node['base']['master']}"%>/cobbler/repo_mirror/CentOS$releasever-$basearch-updates/
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-CentOS-$releasever
enabled=1

# Local misc stuff
[local-misc]
name=Local misc packages
baseurl=http://<%="#{node['base']['master']}"%>/cobbler/repo_mirror/Lab-misc/
gpgcheck=0
enabled=1
