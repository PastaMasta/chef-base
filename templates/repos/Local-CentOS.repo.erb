[local-base]
name=Local CentOS-$releasever - Base
baseurl=http://<%=node['master']%>/repo/os/CentOS/$releasever/os/$basearch/
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-CentOS-$releasever
enabled=1

#released updates 
[local-updates]
name=Local CentOS-$releasever - Updates
baseurl=http://<%=node['master']%>/repo/os/CentOS/$releasever/updates/$basearch/
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-CentOS-$releasever
enabled=1

# Local misc stuff
[local-misc]
name=Local misc packages
baseurl=http://<%=node['master']%>/repo/software
gpgcheck=0
enabled=1
